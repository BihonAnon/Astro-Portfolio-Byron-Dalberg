---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
const visable = true;
const { focused, projects } = Astro.props;

---


{visable ? 
<div
  class="w-48 text-sm font-medium text-gray-900 bg-white rounded-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
>
  <a
    href="#backend-proficiencies"
    class="block py-2 px-4 w-full text-white bg-purple-700 rounded-t-lg border-b border-gray-200 cursor-pointer dark:bg-gray-800 dark:border-gray-600"
  >
    A Closer Look: {focused}
    <div class="">Items: {projects.length}</div> 
  </a>
  {projects.map((project) => 

  <div
    class="block py-2 px-4 w-full border-b border-gray-200 cursor-pointer hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white dark:focus:ring-gray-500 dark:focus:text-white"
  >
    <div>
      {project.name}
    </div>
    <div class="text-slate-400 p-1 rounded-sm text-xs">
      {project.description}
    </div>
    <div class="text-blue-400 p-1 rounded-sm text-xs">
      Updated: {project.updated}
    </div>
    <div class="grid grid-cols-2 justify-items-center">  
      <a class="github" href={project.github}></a>
      <a class="deployed" href={project.href}></a>
    </div>
  
    
  </div>
  )}
</div>

 : 
 <p>Click On A Skill To See More</p>
 <p></p>
 }

 <style>
  .github {
    background-image: url("https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;
    width: 20px;
    height: 20px;
    display: inline-block;
    margin-left: 10px;

  }
  .deployed {
    background-image: url("https://cdn-icons-png.flaticon.com/512/478/478543.png");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;
    width: 20px;
    height: 20px;
    display: inline-block;
    margin-left: 10px;
  }
 </style>